@page "/autor"
@using BibliotecaApp.Web.Models
@inject HttpClient Http
@inject NavigationManager Navigation 

<PageTitle>Autores</PageTitle>

<div class="d-flex justify-content-between align-items-center mb-3">
    <h1>Lista de Autores</h1>
    <button class="btn btn-primary" @onclick="IrParaCriacao">
        + Novo Autor
    </button>
</div>

@if (autores == null)
{
    <p><em>Carregando...</em></p>
}
else
{
    <table class="table table-striped table-hover">
        <thead class="table-dark">
            <tr>
                <th>Id</th>
                <th>Nome</th>
                <th>Nacionalidade</th> 
            </tr>
        </thead>
        <tbody>
            @foreach (var autor in autores)
            {
                <tr>
                    <td>@autor.Id</td>
                    <td>@autor.Nome</td>
                    <td>@autor.Nacionalidade</td>
                    <td>
                        <button class="btn btn-sm btn-warning me-2" 
                                @onclick="() => IrParaEdicao(autor.Id)">
                            Editar
                        </button>

                        <button class="btn btn-sm btn-danger" 
                                @onclick="() => DeletarAutor(autor.Id)">
                            Excluir
                        </button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    private Autor[]? autores;

    // URL base da API (Ajuste a porta se necessário)
    private string ApiUrl = "http://localhost:5265/api/autores"; 

    protected override async Task OnInitializedAsync()
    {
        await CarregarAutores();
    }

    private async Task CarregarAutores()
    {
        autores = await Http.GetFromJsonAsync<Autor[]>(ApiUrl);
    }

    // --- A MÁGICA DO DELETE ---
    private async Task DeletarAutor(int id)
    {
        // Chama a API direto: DELETE api/clientes/5
        var resposta = await Http.DeleteAsync($"{ApiUrl}/{id}");

        if (resposta.IsSuccessStatusCode)
        {
            // Atualiza a tabela removendo o item da lista local visualmente
            // (Isso evita ter que ir no banco buscar tudo de novo)
            autores = autores?.Where(c => c.Id != id).ToArray();
        }
    }

    // Navegação (Vamos criar essas páginas depois)
    private void IrParaCriacao()
    {
        Navigation.NavigateTo("/autor/form");
    }

    private void IrParaEdicao(int id)
    {
        Navigation.NavigateTo($"/autor/form/{id}");
    }
}